{
    "schema": {
      "https://buybutton.store/graphql": {
        "headers": {
          "Authorization": "Bearer xzy"
        }
      }
    },
    "documents": [
      {
        "./src/api/**/*.ts": {
          "noRequire": true
        }
      }
    ],
    "generates": {
      "./src/schema.d.ts": {
        "plugins": ["typescript", "typescript-operations"]
      },
      "./src/schema.graphql": {
        "plugins": ["schema-ast"]
      }
    },
    "hooks": {
      "afterAllFileWrite": ["prettier --write"]
    }
  }
  